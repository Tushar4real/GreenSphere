# GreenSphere Server Environment Variables
# Copy this file to .env and fill in your values

# Required Variables
JWT_SECRET=generate_a_secure_64_character_random_string_here
MONGO_URI=mongodb://localhost:27017/greensphere
NODE_ENV=development
PORT=5001

# AWS Cognito (Optional - for production authentication)
COGNITO_CLIENT_ID=your-cognito-client-id
COGNITO_USER_POOL_ID=your-user-pool-id
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# News API Keys (Optional - for live news feeds)
NEWS_API_KEY=your-newsapi-key
GUARDIAN_API_KEY=your-guardian-api-key

# Email Configuration (Optional - for OTP emails)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Security Note:
# - JWT_SECRET must be at least 32 characters long and cryptographically secure
# - Never commit the actual .env file to version control
# - Use different secrets for development and production